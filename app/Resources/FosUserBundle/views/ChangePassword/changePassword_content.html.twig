<div class="well">
    <form class="form-horizontal" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
        <fieldset>
            <legend>Edit profile</legend>
            <div class="form-group">
                <div class="col-sm-8">
                    {{ form_label(form.current_password) }}
                    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'form.current_password'|trans } }) }}
                    {{ form_errors(form.current_password) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                    {{ form_label(form.new.first) }}
                    {{ form_widget(form.new.first, { 'attr': {'class': 'form-control', 'placeholder': 'New password' } }) }}
                    {{ form_errors(form.new.first) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                    {{ form_label(form.new.second) }}
                    {{ form_widget(form.new.second,{'attr':{'class': 'form-control', 'placeholder':'Repeat new password'} }) }}
                    {{ form_errors(form.new.second) }}
                </div>
            </div>
            {{ form_rest(form) }}
        <div class="col-sm-4 col-sm-offset-4">
            <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
        </fieldset>
    </form>
</div>