{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

<div class="well">
    <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
        <fieldset>
            <legend>Pleace login here</legend>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="alert">
                {% if error %}
                    <div class="alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
                {% endif %}
            </div>
            <div class="form-group">
                <label class="col-sm-4" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-4">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
               </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4" for="inputPassword3">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-4">
                <input class="form-control" type="password" id="password" name="_password" required="required" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="remember_me">
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                <div class="col-sm-4">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <a class="btn btn-default" href="{{ path('fos_user_profile_edit') }}">Cancel</a>
                  <input class="btn btn-primary" type="submit" id="_submit" name="_submit"
                  value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </div>
                <div class="col-sm-4">
                    <a href="{{ path('fos_user_registration_register') }}">Register |</a>
                    <a href="{{ path('fos_user_resetting_request') }}">Forgot password</a>
                </div>
            </div>
        </fieldset>
    </form>
</div>
    {% endblock fos_user_content %}
