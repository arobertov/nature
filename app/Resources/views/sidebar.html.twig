    <div class="recent">
        <h3>RECENT POSTS</h3>
        <ul>
            {% for article in articles %}
            <li><a href="{{ path('article_view', {'id': article.id}) }}">{{ article.title }}</a> </li>
            {% endfor %}
        </ul>
    </div>
    <div class="comments">
        <h3>RECENT COMMENTS</h3>
        <ul>
            {% block recent_comments %}
