<div class="col-md-4 content-right">
    <div class="recent">
        <h3>RECENT POSTS</h3>
        <ul>
            {% for article in articles %}
            <li><a href="{{ path('article_view', {'id': article.id}) }}">{{ article.title }}</a> </li>
            {% else %}
                <p>No publish post !</p>
            {% endfor %}
        </ul>
    </div>
    <div class="comments">
        <h3>RECENT COMMENTS</h3>
        <ul>
            {% block recent_comments %}
                {{ render(controller('AppBundle:Comment:recentComment')) }}
            {% endblock %}
        </ul>
    </div>
    <div class="clearfix"></div>
    <div class="categories">
        <h3>CATEGORIES</h3>
        <ul>
            {% block categories %}
                {{ render(controller('AppBundle:SideBar:categoryView')) }}
            {% endblock %}
        </ul>
    </div>
    <div class="clearfix"></div>
</div>
<div class="clearfix"></div>